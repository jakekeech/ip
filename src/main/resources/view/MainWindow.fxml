<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainWindow" prefWidth="450.0" prefHeight="700.0">
    <children>
        <!-- Chat log area -->
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER" vvalue="1.0"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="43.0">
            <content>
                <VBox fx:id="dialogContainer" prefWidth="388.0"/>
            </content>
        </ScrollPane>

        <!-- Input row -->
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="41.0"
                   AnchorPane.bottomAnchor="1.0"
                   AnchorPane.leftAnchor="1.0"
                   AnchorPane.rightAnchor="86.0"/>
        <Button fx:id="sendButton"
                text="Send"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0" prefWidth="84.0"
                AnchorPane.bottomAnchor="1.0"
                AnchorPane.rightAnchor="1.0"/>
    </children>
</AnchorPane>
